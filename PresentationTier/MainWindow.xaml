<Window x:Class="PresentationTier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationTier"
        mc:Ignorable="d"
        Title="{Binding NameOfShop}"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen" 
        Background="LightCyan">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="GridForTovar"
              DataContext="{Binding ElementName=MainList, Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Margin="5" Grid.Row="0" Text="Название товара:"/>
            <TextBox Margin="5" Grid.Row="0" Grid.Column="1" IsReadOnly="True"
                     Text="{Binding NameProduct}"/>
            <TextBlock Margin="5" Grid.Row="1" Text="Товарная группа:"/>
            <TextBox Margin="5" Grid.Row="1" Grid.Column="1" IsReadOnly="True"
                     Text="{Binding NameGroupProduct}"/>
            <TextBlock Margin="5" Grid.Row="2" Text="Цена:"/>
            <TextBox Margin="5" Grid.Row="2" Grid.Column="1" IsReadOnly="True"
                     Text="{Binding PriceProduct}"/>
            <TextBlock Margin="5" Grid.Row="3" Text="Количество:"/>
            <TextBox Margin="5" Grid.Row="3" Grid.Column="1" IsReadOnly="True"
                     Text="{Binding CountProduct}"/>
            <TextBlock Margin="5" Grid.Row="4" Text="Склад:"/>
            <TextBox Margin="5" Grid.Row="4" Grid.Column="1" IsReadOnly="True"
                     Text="{Binding StorageProduct}"/>
        </Grid>

        <Grid Grid.Row="1" Name="GridForCollections">
            <ListBox Name="MainList" 
                     ItemsSource="{Binding ProductList, Mode=OneWay}"
                     DisplayMemberPath="ProductPresentation" 
                     Background="Azure"
                     Margin="10"/>
        </Grid>

        <Grid Grid.Row="2" Name="GridForItog">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Margin="5" Text="Средняя стоимость по каждой группе:" Grid.Column="0" Grid.Row="0"
                       HorizontalAlignment="Left"/>
            <TextBlock Margin="5" Text="Сетевое оборудование: " Grid.Row="1" Grid.Column="0"/>
            <TextBox Margin="5" Grid.Column="1" Grid.Row="1" IsReadOnly="True"
                     Text="{Binding Path=MiddlePriceOfNetwork, Mode=OneWay}"/>
            <TextBlock Margin="5" Text="ПО: " Grid.Row="2" Grid.Column="0"/>
            <TextBox Margin="5" Grid.Column="1" Grid.Row="2" IsReadOnly="True"
                     Text="{Binding Path=MiddlePriceOfSoftware, Mode=OneWay}"/>
            
            <TextBlock Margin="5 15 5 5" Text="Склад с наибольшим количеством товара:" Grid.Column="0" Grid.Row="3"
                       HorizontalAlignment="Left"/>
            <TextBox Margin="5 15 5 5" Grid.Column="1" Grid.Row="3" IsReadOnly="True"
                     Text="{Binding Path=LargestStorage, Mode=OneWay}"/>
        </Grid>
    </Grid>
</Window>
